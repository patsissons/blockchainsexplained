{
  "name": "blockchainsexplained",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "pnpm": ">=8",
    "node": "^18.17.1"
  },
  "scripts": {
    "clean": "rimraf ./.svelte-kit",
    "prepare": "svelte-kit sync && pnpm build:topics-metadata",
    "dev": "pnpm prepare && vite dev",
    "build": "pnpm prepare && vite build",
    "build:topics-metadata": "tsx scripts/topics/metadata.ts | tee ./src/lib/server/topics/metadata.json",
    "preview": "vite preview",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint 'src/**/*.{css,scss,svelte}'",
    "lint:es": "pnpm prepare && eslint .",
    "lint": "pnpm lint:prettier && pnpm lint:style && pnpm lint:es",
    "validate:svelte": "pnpm prepare && svelte-check --tsconfig ./tsconfig.json",
    "validate:svelte:watch": "pnpm prepare && svelte-check --tsconfig ./tsconfig.json --watch",
    "validate:ts": "pnpm prepare && tsc --noEmit",
    "validate:topics": "tsx scripts/validate/topics.ts",
    "validate": "pnpm validate:ts && pnpm validate:svelte && pnpm validate:topics",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@melt-ui/pp": "^0.1.2",
    "@melt-ui/svelte": "^0.52.0",
    "date-fns": "^2.30.0",
    "github-markdown-css": "^5.4.0",
    "highlight.js": "^11.9.0",
    "isomorphic-dompurify": "^1.11.0",
    "lodash": "^4.17.21",
    "marked": "^4.2.12",
    "parse-md": "^3.0.3",
    "svelte-ionicons": "^0.7.2"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.27.4",
    "@types/lodash": "^4.14.202",
    "@types/marked": "^4.0.8",
    "@types/node": "^20.10.4",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-svelte": "^2.30.0",
    "postcss": "^8.4.32",
    "postcss-html": "^1.5.0",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.1.0",
    "rimraf": "^5.0.5",
    "stylelint": "^16.0.1",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-order": "^6.0.4",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "svelte-sequential-preprocessor": "^2.0.1",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.0.0",
    "vite": "^4.4.2"
  },
  "type": "module"
}
